# Return Address - Environment Variables Template
# Copy this file to .env and fill in your actual values
# 
# To sync from Vercel: vercel env pull .env.local

# Database (Supabase PostgreSQL)
# Connection pooler (port 6543) for serverless functions
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true

# Direct database connection (port 5432) for migrations
DIRECT_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres

# Application URL
NEXT_PUBLIC_APP_URL=https://returnaddress.io

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxx
CLERK_SECRET_KEY=sk_live_xxx

# Stripe Payments
STRIPE_SECRET_KEY=sk_live_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# OpenAI LLM Provider
OPENAI_API_KEY=sk-xxx

# Supabase Storage (S3-compatible)
S3_ENDPOINT=https://[PROJECT-REF].supabase.co/storage/v1/s3
S3_ACCESS_KEY_ID=xxx
S3_SECRET_ACCESS_KEY=xxx
S3_BUCKET_NAME=return-address-files
S3_REGION=us-west-1

# Supabase
SUPABASE_URL=https://[PROJECT-REF].supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJxxx

# Admin Configuration
ADMIN_EMAILS=admin@example.com

# Platform Fee (basis points: 500 = 5%)
PLATFORM_FEE_BPS=500
